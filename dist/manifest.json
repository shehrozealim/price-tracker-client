{
    "manifest_version": 3,
    "name": "Price Tracker",
    "version": "0.0.1",
    "description": "Tracks prices of products on Amazon",
    "action": {
        "default_title": "Click me",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js",
        "scripts": [
            "background1.js"
        ],
        "persistant": false
    }

}